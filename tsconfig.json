{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/*",
            ]
        },
    },
    "exclude" : [
        "tests/**/*.*",
        "dest/**/*.*",
        "node_modules/**/*.*"
    ]
  }